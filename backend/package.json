{
    "name": "backend",
    "version": "1.0.0",
    "description": "Code Contribution Analyzer Backend Service",
    "main": "src/index.js",
    "scripts": {
        "start": "node src/index.js",
        "dev": "nodemon src/index.js",
        "lint": "eslint src/",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "debug:analysis": "node src/scripts/debugAnalysis.js"
    },
    "jest": {
        "testEnvironment": "node",
        "coverageDirectory": "./coverage",
        "collectCoverageFrom": [
            "src/**/*.js",
            "!src/**/*.test.js"
        ]
    },
    "dependencies": {
        "axios": "^1.7.9",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "mongoose": "^8.9.5",
        "node-cron": "^3.0.3",
        "simple-git": "^3.22.0",
        "winston": "^3.17.0"
    },
    "devDependencies": {
        "eslint": "^8.56.0",
        "jest": "^29.7.0",
        "nodemon": "^3.0.2"
    }
}
